<h1>Create New Song</h1>

<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <h3>There were errors preventing you from creating a new song:</h3>
    <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :released %>
  <br>
  <%= f.check_box :released %>
  <br><br>
  <%= f.label :release_year %>
  <br>
  <%= f.text_field :release_year %>
  <br><br>
  <%= f.label :artist_name %>
  <br>
  <%= f.text_field :artist_name %>
  <br><br>
  <%= f.label :genre %>
  <br>
  <%= f.text_field :genre %>
  <br><br>
  <%= f.submit "Save Song" %>
<% end %>
